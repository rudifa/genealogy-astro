---
import GenealogyGraph from "../components/GenealogyGraph.astro";
import EditPersonDialog from "../components/EditPersonDialog.astro";
import jsonData from "@/data/sample_tree.json";
import type {GenealogyData} from "@/types";

const genealogyData: GenealogyData = jsonData;
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <title>Genealogy Tree</title>
    <!-- Load the hpcc-js/wasm UMD bundle from the public directory to ensure it's available globally -->
    <script src='/vendor/index.umd.js' is:inline></script>
  </head>
  <body>
    <h1>Genealogy Tree</h1>
    <GenealogyGraph data={genealogyData} />
    <EditPersonDialog />
  </body>
</html>
